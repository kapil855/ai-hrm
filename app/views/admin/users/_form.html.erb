<%= form_with(model: [:admin , user], local: false) do |form| %>
  <div class="modal-body">
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: 'form-control form-control-lg' %>
    </div>
    <div class="form-group mt-3">
      <%= form.label :last_name %>
      <%= form.text_field :last_name , class: 'form-control form-control-lg'%>
    </div>
    <div class="form-group mt-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control form-control-lg' %>
    </div>
    <div class="form-group mt-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control form-control-lg' %>
    </div>
  </div>
  <div class="modal-footer">
    <div class="form-group mt-4">
      <%= form.submit " Submit", class: 'btn btn-lg btn-primary' %>
      <button type="button" class="btn btn-secondary btn-lg close-modal" data-bs-dismiss="modal">Close</button>
    </div>
  </div>
<% end %>
