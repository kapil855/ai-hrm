<div class="container">
  <div class="col-md-7 mx-md-auto mt-5 mb-5">
    <div class="card shadow">
      <div class="card-header bg-primary ">
        <h2 class="card-title text-center text-white ">User Details</h2>
      </div>
      <div class="card-body">
				<p>
				  <strong>First Name:</strong>
				  <%= @user.first_name %>
				</p>
				<p>
				  <strong>Last Name:</strong>
				  <%= @user.last_name %>
				</p>
				<p>
				  <strong>Email:</strong>
				  <%= @user.email %>
				</p>
				<%= link_to 'Back', admin_users_path, class: 'btn btn-primary btn-lg mt-4' %>
			</div>
		</div>
	</div>
</div>
